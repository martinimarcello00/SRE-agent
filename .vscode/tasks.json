{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start MCP Server",
      "type": "shell",
      "command": "/home/vm-kubernetes/.cache/pypoetry/virtualenvs/sre-agent-35UqMg2y-py3.13/bin/python",
      "args": ["MCP-server/mcp_server.py"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Server.*running.*|.*started.*|.*listening.*|.*Ready.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "langgraph",
        "close": false
      }
    },
    {
      "label": "Launch LangGraph Studio",
      "type": "shell",
      "command": "/home/vm-kubernetes/.cache/pypoetry/virtualenvs/sre-agent-35UqMg2y-py3.13/bin/langgraph",
      "args": ["dev", "--allow-blocking"],
      "options": {
        "cwd": "${workspaceFolder}/sre-agent"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Ready.*|.*started.*|.*listening.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "langgraph",
        "close": false
      },
      "dependsOn": ["Start MCP Server"]
    },
    {
      "label": "langgraph-studio",
      "dependsOn": [
        "Launch LangGraph Studio"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "langgraph"
      }
    }
  ]
}
